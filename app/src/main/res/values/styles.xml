<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolbarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">32dp</item>
        <item name="itemPaddingTop">4dp</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>
</resources>